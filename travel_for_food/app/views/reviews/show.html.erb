
<h1> <%= @review.user.username.capitalize %>'s Reviews </h1>

<ul><table id="customers">
<tr>
<th>Title: </th> 
<th> Star Rating: </th> 
<th> Restaurant: </th>
<th> Location: </th>
<th> <%= @review.user.username.capitalize %>'s Review:</th>
 </tr>
<td><%=@review.title%></td>
<td><%=@review.star_rating%> </td>
<td><%=@review.restaurant.name%> </td>
<td><%=@review.location.country%>, <%=@review.location.city%></td>
<td><%=@review.review%></td>
</table></ul>

<% if @review.user_id == session[:user_id] %>
				<button type="button"><%= link_to "Edit", edit_user_review_path, method: 'get'%></button>
				<button><%= link_to "Delete Trip", user_review_path(@user), :method => 'delete'%></button>
		<% end %>	

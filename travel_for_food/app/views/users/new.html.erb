<h1>Sign Up Today</h1>

<%= render partial: '/errors', locals: { record: @user } %>

<%= form_for @user, url: signup_path do |f| %>
   <%= f.label :email%>
   <%= f.text_field :email%><br><br>
   <%= f.label :username%>
   <%= f.text_field :username %><br><br>
   <%= f.label :password%>
   <%= f.password_field :password %><br><br>
   <%= f.submit "Create Account"%>
<% end %>
